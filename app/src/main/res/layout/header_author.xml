<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_header_author"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_collapseMode="parallax"
              app:layout_collapseParallaxMultiplier="0.7"
              android:fitsSystemWindows="true"
    >

    <ImageView
        android:id="@+id/iv_author_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_margin"
        />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/deauflt_text"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/default_margin"
        tools:text="微在涨姿势"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_author_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        android:text="@string/author_detail_share"
        android:layout_gravity="center"
        />

    <com.example.xiaobozheng.eyevideo.widget.CenterTextView
        android:id="@+id/tv_author_destription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_gravity="center"
        android:textSize="@dimen/small_text"
        tools:text="黄金时代很谨慎的回复较好的手机话费的数据发的说法是大家很快的数据库复活点绝对是空间返回"
        android:layout_marginBottom="@dimen/default_margin"
        />

</LinearLayout>